<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/imgProductFavorite"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/txtNameFavorite"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:text="The Legend of Zelda A link Awakened"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProductFavorite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/txtPlatformFavorite"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Play Station"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/txtNameFavorite" />

    <TextView
        android:paddingRight="20dp"
        android:id="@+id/txtPriceFavorite"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="TextView"
        android:gravity="center|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/txtPlatformFavorite" />

    <Button
        android:id="@+id/btnAddCartFavorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="aÃ±adir al carrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/txtPriceFavorite" />

    <Button
        android:id="@+id/btnNavProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ver producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/btnAddCartFavorite" />

    <TextView
        android:background="#41000000"
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNavProduct" />

</androidx.constraintlayout.widget.ConstraintLayout>