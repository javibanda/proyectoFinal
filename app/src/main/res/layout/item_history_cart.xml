<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <ImageView
        android:id="@+id/imgProductCartHistory"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNameProductCartHistory"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="THE LEGEND OF ZELDA A LINK AWAKENED"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProductCartHistory"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPlatformProductCartHistory"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="NINTENDO SWITCH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/txtNameProductCartHistory" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#41000000"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66666" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8333333" />

    <TextView
        android:gravity="center"
        android:id="@+id/txtPriceProductCartHistory"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="120E"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/txtPlatformProductCartHistory" />

    <TextView
        android:gravity="center"
        android:id="@+id/txtQuantityProductCartHistory"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="X2"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/txtPlatformProductCartHistory" />

    <TextView
        android:gravity="center"
        android:id="@+id/txtTotalPriceProductCartHistory"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="244E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toBottomOf="@+id/txtPlatformProductCartHistory" />
</androidx.constraintlayout.widget.ConstraintLayout>